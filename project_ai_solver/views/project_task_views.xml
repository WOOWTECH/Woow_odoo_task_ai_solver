<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_task_form_inherit_chat" model="ir.ui.view">
        <field name="name">project.task.form.inherit.chat</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <!-- Add chat_enabled toggle to the form -->
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="chat_enabled"/>
                <field name="channel_id" invisible="1"/>
            </xpath>

            <!-- Add Chat notebook page -->
            <xpath expr="//notebook" position="inside">
                <page string="Chat"
                      name="chat_page"
                      invisible="not chat_enabled or not channel_id">
                    <div class="w-100 d-flex">
                        <field name="channel_id" widget="task_chat_widget" nolabel="1" class="w-100"/>
                    </div>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
